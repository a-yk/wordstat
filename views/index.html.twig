{% extends "layouts/default.html.twig" %}

{% block content %}
    <div class="py-5 text-center">
        <h1 class="h2">Расчет букв в тексте</h1>
        <p class="lead">Введите текст в форму и нажмите кнопку "Рассчитать"</p>
    </div>
    <form class="needs-validation" validate method="POST" action="/calculate/">
        <div class="row">
            <div class="col-12 text-center">
                <textarea class="form-control h-textarea-vh" name="text" required></textarea>
            </div>
        </div>
        <div class="row py-5">
            <div class="col-12 text-center">
                <button class="w-30 btn btn-primary btn-lg" type="submit">Рассчитать</button>
            </div>
        </div>
    </form>
{% endblock %}
